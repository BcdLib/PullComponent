@page "/"
@inject IJSRuntime js

<div style="border: 1px solid #ccc;">
    <PullDown OnRefreshing="OnRefresh">

        <a href="/counter">Gooooo</a>


        <div style="user-select: none; height: 500px; ">
            pull down Refresh times @count
        </div>

    </PullDown>
</div>


@code {
